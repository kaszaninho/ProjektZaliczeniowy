<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PsychoMedikApp.Views.HarmonogramView.NewHarmonogramPage"
             Shell.PresentationMode="ModalAnimated"
             Title="Nowy Harmonogram">
    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="Data Pracy" FontSize="Medium" />
            <DatePicker Date="{Binding DataPracy, Mode=TwoWay}" FontSize="Medium" />
            <Label Text="Pracownik" FontSize="Medium" />
            <Picker ItemDisplayBinding="{Binding ImieNazwisko}" SelectedItem="{Binding WybranyPracownik, Mode=TwoWay}" ItemsSource="{Binding Pracownicy}" FontSize="Medium" />
            <Label Text="Godzina Rozpoczęcia" FontSize="Medium" />
            <Editor Text="{Binding GodzinaRozpoczecia, Mode=TwoWay}" FontSize="Medium" />
            <Label Text="Godzina zakończenia" FontSize="Medium" />
            <Editor Text="{Binding GodzinaZakonczenia, Mode=TwoWay}" AutoSize="TextChanges" FontSize="Medium" Margin="1"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Anuluj" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand" />
                <Button Text="Zapisz" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    